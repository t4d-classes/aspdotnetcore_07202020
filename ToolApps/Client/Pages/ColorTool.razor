@page "/color-tool"

  <header>
    <h1>@headerText</h1>
  </header>

  <main>
    <ul>
      @foreach(var color in colors)
      {
        <li>
          @color.Id - @color.Name - @color.Hexcode  
        </li>
      }
    </ul>
  </main>

  <footer>
    <small>&copy; 2020 A Cool Company, Inc.</small>
  </footer>

@code {

  string headerText = "Color Tool";

  List<Color> colors;

  protected override void OnInitialized()
  {
    colors = new List<Color>();
    colors.Add(new Color() { Id = 1, Name = "red", Hexcode = "ff0000" });
    colors.Add(new Color() { Id = 2, Name = "green", Hexcode = "00ff00" });
    colors.Add(new Color() { Id = 3, Name = "blue", Hexcode = "0000ff" });
  }
}
